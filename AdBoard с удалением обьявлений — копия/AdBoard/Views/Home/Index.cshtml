@model AdBoard.ViewModels.HomeModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Главная страница</h2>

@if (AdBoard.Helpers.AuthHelper.IsAuthenticated(Context))
{
    @AdBoard.Helpers.AuthHelper.GetUser(Context).Email<br />
    @Html.ActionLink("Выйти", "LogOff", "Account")<br />
    if (AdBoard.Helpers.AuthHelper.GetUser(Context).RoleId!=1)
    {
    @Html.ActionLink("Аккаунт", "GoToAccount", "Account")<br />
    }
    else
    {
        @Html.ActionLink("Администрирование", "Admin", "Admin")<br />
    }
}
else
{
    using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
    {
        @Html.TextBoxFor(l => l.Email)
        @Html.ValidationMessageFor(l => l.Email)<br />
        @Html.PasswordFor(l => l.Password)
        @Html.ValidationMessageFor(l => l.Password)<br />
        <input type="submit" value="Войти" /><br />
        @Html.ActionLink("Регистрация", "Registration", "Registration")
    }
}

